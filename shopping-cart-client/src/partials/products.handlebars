{{#each products}}
<div class="s_product">
    <div class="s_product__title">
        <h2>
            <a href="#">{{this.name}}</a>
        </h2>
    </div>
    
    <div class="s_product__content">
        <div class="s_product__image">
            <picture>
                <img src="{{ ../server }}{{ this.imageURL }}" alt="{{this.name}}" width="250" height="250" loading="lazy" />
            </picture>
        </div>
        
        <div class="s_product__mobile">
        <div class="s_product__description">
            <p>{{this.description}}</p>
        </div>
        <div class="s_product__actions_mobile">
        <div class="s_product__buynow">
            <button type="button" data-id="{{this.id}}" class="incrementQty buyNow">Buy Now @ Rs.{{this.price}}</button>
        </div>
</div>
    </div>
    </div>
    <div class="s_product__actions">
        <div class="s_product__price"><strong>MRP Rs.{{this.price}}</strong></div>
        <div class="s_product__buynow">
            <button type="button" data-id="{{this.id}}" class="incrementQty buyNow">Buy Now</button>
        </div>
    </div>
    <div class="s_product__actions_tablet">
        <div class="s_product__buynow">
            <button type="button" data-id="{{this.id}}" class="incrementQty buyNow">Buy Now @ Rs.{{this.price}}</button>
        </div>
    </div>
</div>
{{/each}}